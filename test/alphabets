


function setup(){
  createCanvas (1000,1000);
}


function draw(){

  var lineheight = 24;
  var margin = 40;
  translate(margin, margin);

  var str='afjzsha';
  var numbers = [a1(str)];


  for (var j = 0; j < numbers.length; j++) {
    var size = numbers[j];


  fill(0,0,0,50);
  ellipse (j*100,100,size,size)
  scale(10);
  }


//
 for (var k = 0; k < headlines.length; k++) {
    var phrase = headlines[k].split(" ");


    console.log(phrase);
    var currentOffset = 0;
    for (var m = 0; m < phrase.length; m++) {
      var wordWidth = textWidth(phrase[m]);
      fill(0);
      rect(25+currentOffset, 25+k*20,
        wordWidth, 16);
      }
      // four pixels between words
      currentOffset += wordWidth + 4; 
    }
  }


}



function a1(txt, literal){
    if(!literal) txt= txt.toLowerCase();
    return txt.split('').map(function(c){
        return 'abcdefghijklmnopqrstuvwxyz'.indexOf(c)+1 || (literal? c: '');
    }).join(',');
}